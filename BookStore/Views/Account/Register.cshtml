@model RegisterViewModel
@{
    ViewData["Title"] = "ایجاد حساب کاربری";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-image-side">
            <img src="~/images/register-bg.jpg" alt="ثبت‌نام در کتابخانه" class="auth-image">
            <div class="auth-image-overlay">
                <h3>به جمع خوانندگان ما بپیوندید</h3>
                <p>با ثبت‌نام از امکانات ویژه بهره‌مند شوید</p>
            </div>
        </div>

        <div class="form-side">
            <div class="auth-header">
                <h2>ایجاد حساب جدید</h2>
                <p>اطلاعات خود را تکمیل کنید</p>
            </div>

            <form asp-action="Register" method="post" class="auth-form">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="firstName">نام کاربری</label>
                        <div class="input-group">
                            <i class="fas fa-user input-icon"></i>
                            <input asp-for="UserName" type="text" class="form-control" placeholder="نام خود را وارد کنید">
                        </div>
                        <span asp-validation-for="UserName" class="validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label for="lastName">نام خانوادگی</label>
                        <div class="input-group">
                            <i class="fas fa-user input-icon"></i>
                            <input asp-for="FullName" type="text" class="form-control" placeholder="نام خانوادگی خود را وارد کنید">
                        </div>
                        <span asp-validation-for="FullName" class="validation-message"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="lastName">شهر</label>
                    <div class="input-group">
                        <i class="fas fa-user input-icon"></i>
                        <input asp-for="City" type="text" class="form-control" placeholder="نام شهر خود را وارد کنید">
                    </div>
                    <span asp-validation-for="City" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label for="email">ایمیل</label>
                    <div class="input-group">
                        <i class="fas fa-envelope input-icon"></i>
                        <input asp-for="Email" type="email" class="form-control" placeholder="example@email.com">
                    </div>
                    <span asp-validation-for="Email" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label for="phone">شماره تلفن</label>
                    <div class="input-group">
                        <i class="fas fa-phone input-icon"></i>
                        <input asp-for="Phone" type="tel" class="form-control" placeholder="09********">
                    </div>
                    <span asp-validation-for="Phone" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label for="password">رمز عبور</label>
                    <div class="input-group">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••">
                        <button type="button" class="password-toggle" onclick="togglePassword('password')">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">تکرار رمز عبور</label>
                    <div class="input-group">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••">
                        <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword')">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                </div>

                <div class="form-options">
                    <label class="checkbox-container">
                        <input type="checkbox" required>
                        <span class="checkmark"></span>
                        با <a href="#">قوانین و مقررات</a> موافقم
                    </label>
                </div>

                <button type="submit" class="auth-btn primary-btn">
                    <i class="fas fa-user-plus"></i>
                    ایجاد حساب کاربری
                </button>

                @* ToDo Register by google*@
                @* <div class="auth-divider"> *@
                @*     <span>یا</span> *@
                @* </div> *@
                @* <button type="button" class="auth-btn secondary-btn"> *@
                @*     <i class="fab fa-google"></i> *@
                @*     ادامه با گوگل *@
                @* </button> *@
            </form>

            <div class="auth-footer">
                <p>
                    قبلاً حساب دارید؟
                    <a href="/Login" class="auth-link">وارد شوید</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}