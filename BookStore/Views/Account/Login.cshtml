@model LoginViewModel

@{
    ViewData["Title"] = "ورود به حساب کاربری";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-image-side">
            <img src="~/images/login-bg.jpg" alt="ورود به کتابخانه" class="auth-image">
            <div class="auth-image-overlay">
                <h3>به کتابخانه ما خوش آمدید</h3>
            </div>
        </div>

        <div class="form-side">
            <div class="auth-header">
                <h2>ورود به حساب</h2>
                <p>اطلاعات خود را وارد کنید</p>
            </div>

            <form asp-action="Login" method="post" class="auth-form" asp-route-returnUrl="@ViewData["returnUrl"]">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label for="username">نام کاربری</label>
                    <div class="input-group">
                        <i class="fas fa-user input-icon"></i>
                        <input asp-for="UserName" type="text" class="form-control" placeholder="example@email.com">
                    </div>
                    <span class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label for="password">رمز عبور</label>
                    <div class="input-group">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••">
                        <button type="button" class="password-toggle" onclick="togglePassword('password')">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span class="validation-message"></span>
                </div>

                <div class="form-options">
                    <label class="checkbox-container">
                        <input asp-for="RememberMe" type="checkbox">
                        <span class="checkmark"></span>
                        مرا به خاطر بسپار
                    </label>
                    <a href="#" class="forgot-password">رمز عبور را فراموش کرده‌اید؟</a>
                </div>

                <button type="submit" class="auth-btn primary-btn">
                    <i class="fas fa-sign-in-alt"></i>
                    ورود به حساب
                </button>

                @* <div class="auth-divider"> *@
                @*     <span>یا</span> *@
                @* </div> *@
                @* <button type="button" class="auth-btn secondary-btn"> *@
                @*     <i class="fab fa-google"></i> *@
                @*     ادامه با گوگل *@
                @* </button> *@
            </form>

            <div class="auth-footer">
                <p>
                    حساب کاربری ندارید؟
                    <a href="/Register" class="auth-link">ثبت‌نام کنید</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/auth.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}