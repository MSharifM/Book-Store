@model ChangePasswordViewModel

@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<div class="user-panel">
    <div class="panel-header">
        <div class="user-info-card">
            @* <div class="user-avatar"> *@
            @*     <img src="~/images/avatar-placeholder.jpg" alt="پروفایل کاربر" class="avatar-img"> *@
            @* </div> *@
            <div class="user-details">
                <h1 class="user-name">@User.Identity.Name</h1>
            </div>
        </div>
    </div>

    <div class="panel-container">

        <partial name="_SideBar" />

        <main class="panel-content">
            @if (ViewData["isChanged"] is true)
            {
                <h4><strong>رمز عبور با موفقیت تغییر یافت</strong></h4>
            }
            <div class="content-section">
                <div class="section-header">
                    <h2>تغییر رمز عبور</h2>
                </div>

                <form asp-action="ChangePassword" asp-controller="Home" asp-area="UserPanel" method="post" class="password-form">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label for="currentPassword">رمز عبور فعلی</label>
                        <div class="input-group">
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="@Model.OldPassword" class="form-control">
                            <button type="button" class="password-toggle" onclick="togglePassword('currentPassword')">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="newPassword">رمز عبور جدید</label>
                        <div class="input-group">
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="@Model.NewPassword" class="form-control">
                            <button type="button" class="password-toggle" onclick="togglePassword('newPassword')">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword">تکرار رمز عبور جدید</label>
                        <div class="input-group">
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="@Model.RePassword" class="form-control">
                            <button type="button" class="password-toggle" onclick="togglePassword('confirmPassword')">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="@Model.RePassword" class="text-danger"></span>
                    </div>

                    <div class="form-actions">
                        <button type="button" class="cancel-btn">انصراف</button>
                        <button type="submit" class="submit-btn">
                            <i class="fas fa-save"></i>
                            تغییر رمز عبور
                        </button>
                    </div>
                </form>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function togglePassword(inputId) {
            const passwordInput = document.getElementById(inputId);
            const toggleIcon = passwordInput.parentNode.querySelector('.password-toggle i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        document.getElementById('changePasswordForm').addEventListener('submit', function(e) {
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;

            if (newPassword !== confirmPassword) {
                alert('رمز عبور جدید و تکرار آن مطابقت ندارند');
                return;
            }

            if (newPassword.length < 6) {
                alert('رمز عبور جدید باید حداقل ۶ کاراکتر باشد');
                return;
            }

            const submitBtn = this.querySelector('.submit-btn');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> در حال تغییر...';
            submitBtn.disabled = true;

            setTimeout(() => {
                alert('رمز عبور با موفقیت تغییر یافت');
                submitBtn.innerHTML = '<i class="fas fa-save"></i> تغییر رمز عبور';
                submitBtn.disabled = false;
                this.reset();
            }, 2000);
        });

        document.querySelector('.cancel-btn').addEventListener('click', function() {
            window.history.back();
        });
    </script>
}